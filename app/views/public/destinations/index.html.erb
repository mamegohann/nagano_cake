<div class="containar">
  <div class="row justify-content-center">
    <div class="col-lg-9 mt-5">
    <h2>配送先登録 / 一覧</h2><br>
    <%= form_with model: @destination, method: :post  do |f|%>

      <table class="table table-borderless">
        <tr>
          <td style="width: 20%" >郵便番号（ハイフンなし）</td>
          <td style="width: 20%"><%= f.text_field :destination_postal_code, class: "form-control" %></td>
          <td style="width: 20%"></td>
          <td style="width: 20%"></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan="2"><%= f.text_field :destination_address, class: "form-control" %></td>
          <td></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :destination_name, class: "form-control" %></td>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>

      <table class="table table-bordered border-dark">
        <thead>
          <tr class="table-secondary">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
          <% @destinations.each do |destination| %>
          <tr>
            <td><%= destination.destination_postal_code %></td>
            <td><%= destination.destination_address %></td>
            <td><%= destination.destination_name %></td>
            <td>
              <%= link_to "編集", edit_destination_path(destination.id), class: "btn btn-success" %>
              <%= link_to "削除", destination_path(destination.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>
