<div calss="row">
  <div class="col-xs-12">
    <h2>注文履歴一覧</h2>
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="info">
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= order.created_at.strftime('%Y/%m/%d') %>
                </td>
                <td class="text-left">
                  〒<%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </td>
                <td>
                  <% order.order_items.each do |order_items| %>
                  	<%= order_items.item.name %><br>
                  <% end %>
                </td>
                <td class="text-right">
                  <%= @billing.to_s(:delimited) %>円
                </td>
                <td>
                  <%= order.order_status %>
                </td>
         	      <td>
                  <%= form_with model: order, url: order_path do |f| %>
                    <%= f.submit "表示する", class: "btn btn-info" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
    </div>
</div>