<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "sidebar", genres: @genres %>
    </div>
    <div class="col-lg-9">
      <h2>
        商品一覧
        <span class="h5">（全<%= @items.count %>件）</span>
      </h2>
      <div class="d-flex align-content-end flex-wrap">
      <% @items.each do |item| %>
        <div class="p-3">
          <%= link_to item_path(item.id), class: "text-decoration-none text-secondary align-baseline" do %>
            <%= image_tag item.get_image(200,100) %><br>
            <%= item.name %><br>
            ¥ <%= item.price %>
          <% end %>
        </div>
      <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>