<div class="containar">
  <div class="row justify-content-center">
    <div class="col-lg-9 mt-5">
    <h2>注文履歴詳細</h2><br>

      <table class="table table-borderless">
        <tr>
          <td style="width: 20%">購入者</td>
          <td style="width: 80%"><%= @order.customer_id.name %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.create_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.destination_address %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= @order.destination_name %></td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
        <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
          <td>注文ステータス</td>
          <td>
            <%= f.select :status, [['入金待ち', 0],['入金確認', 1], ['制作中', 2], ['発送準備中', 3], ['発送済み', 4]] %>  <%= f.submit '更新', class: "btn btn-success" %>
          </td>
        <% end %>
        </tr>
      </table>
      <%= form_with model: @order, method: :patch  do |f|%>
      <% end %>

      <table class="table table-bordered border-dark">
        <thead>
          <tr class="table-secondary">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
          <% @destinations.each do |destination| %>
          <tr>
            <td><%= destination.destination_postal_code %></td>
            <td><%= destination.destination_address %></td>
            <td><%= destination.destination_name %></td>
            <td>
              <%= link_to "編集", edit_destination_path(destination.id), class: "btn btn-success" %>
              <%= link_to "削除", destination_path(destination.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>
