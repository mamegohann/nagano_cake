<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
          <h3 class="p-3">注文履歴一覧</h3>
        </div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>購入個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>
            <tbody>
            	<% @orders.each do |order| %>
              	<tr>
                  <td>
                    <%= link_to admin_order_path(order.id) do %>
                      <%= l order.created_at %>
                    <% end %>
                  </td>
                  <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                  <td><%= order.order_details.sum(:quantity) %></td>
                  <td><%= order.status_i18n %></td>
                </tr>
              <% end %>
              <%= paginate @orders %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>