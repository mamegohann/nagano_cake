<% provide(:title, "商品編集") %>
<h2 class="head-line title_h2 text-center">商品編集</h2>
<div class="row">

  <%= form_for(@item, url: admin_item_path, method: :patch, class: "form-horizontal") do |f| %>
    <div class="col-xs-4">
      <div class="form-group">
	      <%= f.file_field :image, accept: "image/*", class: " image" %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
          <%= f.label :"商品名", class: "col-sm-4 control-label" %>
          <%= f.text_field :name, class: "col-sm-8 form-control-static name" %>
      </div>
      <div class="form-group">
        <%= f.label :"商品説明", class: "col-sm-4 control-label" %>
        <%= f.text_area :introduction, class: "col-sm-8 control-label explanation" %>
      </div>
        
      <div class="form-group">
        <%= f.label :"ジャンル", class: "col-sm-4 control-label" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-8 genre_id") %>
      </div>
        
      <div class="form-group">
        <%= f.label :"税抜価格", class: "col-sm-4 control-label" %>
        <%= f.text_field :price, class: "col-sm-3 form-control-static price" %>円
      </div>
      <div class="form-group">
        <%= f.label :"販売ステータス", class: "col-sm-6 control-label" %>
        <%= f.radio_button :status, "true" %>
        <%= f.label :"販売中" %>
        <%= f.radio_button :status, "false" %>
        <%= f.label :"販売停止" %>
      </div>
        
      <div class="actions">
	      <%= f.submit "変更を保存", class: "btn btn-primary pull-right" %>
      </div>
    </div>
  <% end %>
</div>