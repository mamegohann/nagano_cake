<% provide(:title, "商品詳細") %>
<h2 class="head-line title_h2 text-center">商品詳細</h2>
<div class="row">
  <div class="col-xs-12">
	<div class="col-xs-4">
      <div id="img_field">
  		<%= image_tag @item.get_image, size: "200x200" %></p>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="field">
		<p>商品名　　　　　<%= @item.name %></p>
      </div><br>
      <div class="field">
		<p>商品説明　　　　<%= @item.introduction %></p><br>
      </div>
      <div class="field">
		<p>ジャンル　　　　<%= @item.genre.name %></p><br>
      </div>
      <div class="field">
		<p>税込価格　　　　<%= @item.add_tax_price.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited) %>) 円<br>
		  (税抜価格)
		</p><br>
      </div>
      <div class="field">
		<p>
		  販売ステータス
	      <% if @item.status == true %>
			<i class="fas fa-bullseye red"></i>販売中
		  <% elsif @item.status == false %>
			<i class="fas fa-bullseye blue"></i>販売停止中
		  <% end %>
		</p>
      </div>
    </div>
	<div class="actions col-xs-9">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
    </div>
   </div>
  </div>
 </div>